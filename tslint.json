{
  "project": "./tsconfig.json",
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "rules": {
    "function-name": false,
    "variable-name": false,
    "import-name": false,

    "ter-arrow-parens": [false],
    "align": [true, "parameters", "statements"],
    "trailing-comma": [
      false,
      {
        "singleline": "never",
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "never"
        }
      }
    ]
  }
}
